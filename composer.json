{
  "name": "rere/yii2-ra",
  "description": "Yii 2 RA Project",
  "keywords": [
    "yii2",
    "framework",
    "admin",
    "cms"
  ],
  "homepage": "http://www.yiiframework.com/",
  "type": "project",
  "license": "BSD-3-Clause",
  "support": {
    "issues": "https://github.com/yiisoft/yii2/issues?state=open",
    "forum": "http://www.yiiframework.com/forum/",
    "wiki": "http://www.yiiframework.com/wiki/",
    "irc": "irc://irc.freenode.net/yii",
    "source": "https://github.com/yiisoft/yii2"
  },
  "minimum-stability": "dev",
  "require": {
    "php": ">=5.4.0",
    "yiisoft/yii2": ">=2.0.5",
    "yiisoft/yii2-swiftmailer": "*",
    "rere/yii2-admin": "dev-rc-1.0"
  },
  "require-dev": {
    "yiisoft/yii2-codeception": "*",
    "yiisoft/yii2-debug": "*",
    "yiisoft/yii2-gii": "*",
    "yiisoft/yii2-faker": "*"
  },
  "config": {
    "process-timeout": 1800
  },
  "scripts": {
    "post-create-project-cmd": [
      "php -r \"copy('web/.htaccess', '../.htaccess');\"",
      "php -r \"copy('web/favicon.ico', '../favicon.ico');\"",
      "php -r \"mkdir('../assets', 0777);\"",
      "php -r \"mkdir('../image', 0777);\"",
      "php -r \"mkdir('../source', 0777);\"",
      "php -r \"mkdir('../theme', 0777);\"",
      "php -r \"file_put_contents('../index.php', '<?php require(__DIR__ . \''. str_replace(dirname(__DIR__), '', __DIR__).'/web/index.php\');');\"",
      "yii\\composer\\Installer::postCreateProject"
    ]
  },
  "extra": {
    "yii\\composer\\Installer::postCreateProject": {
      "setPermission": [
        {
          "web/assets": "0777",
          "runtime": "0777",
          "yii": "0755"
        }
      ],
      "generateCookieValidationKey": [
        "config/web.php"
      ]
    },
    "asset-installer-paths": {
      "npm-asset-library": "vendor/npm",
      "bower-asset-library": "vendor/bower"
    }
  }
}
